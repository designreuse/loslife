<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace必须指向Dao接口 -->
<mapper namespace="com.asgab.repository.AdvertiserMapper">
	
	<select id="search" parameterType="map" resultType="Advertiser">
		select id,clientname as name
		from clients where 1=1
		<if test="name != null">
			and clientname like "%"#{name}"%"
		</if>
	</select>
	
	<select id="get" parameterType="Long" resultType="Advertiser">
		select id,clientname as name
		from clients where id=#{id}
	</select>
	
</mapper> 
