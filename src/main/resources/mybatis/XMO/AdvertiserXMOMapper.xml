<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace必须指向Dao接口 -->
<mapper namespace="com.asgab.repository.xmo.AdvertiserXMOMapper">
	
	<!-- 查询用户,演示: 1.输入用map传入多个参数 2.<where>语句, 智能添加where和and关键字 3.输出直接映射对象 -->
	<select id="search" parameterType="map" resultType="Advertiser">
		select id,clientname as name
		from clients where 1=1
		<if test="name != null">
			and clientname like "%"#{name}"%"
		</if>
	</select>
	
	<select id="get" parameterType="Long" resultType="Advertiser">
		select id,clientname as name
		from clients where id=#{id}
	</select>
	
</mapper> 
