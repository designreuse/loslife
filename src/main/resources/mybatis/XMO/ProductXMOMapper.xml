<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace必须指向Dao接口 -->
<mapper namespace="com.asgab.repository.xmo.ProductXMOMapper">
	
	<!-- 查询用户,演示: 1.输入用map传入多个参数 2.<where>语句, 智能添加where和and关键字 3.输出直接映射对象 -->
	<select id="search" parameterType="map" resultType="Product">
		select id,name,name_en as nameEn
		from sell_product_types where 1=1
		<if test="name != null">
			and (name like "%"#{name}"%" 
				or name_en like "%"#{name}"%" 
			)
		</if>
	</select>
	
	<select id="get" parameterType="Long" resultType="Product">
		select id,name,name_en as nameEn
		from sell_product_types where id=#{id}
	</select>
	
</mapper> 
